%h1= @article.title

%p.flash= flash[:notice]

.article_actions
  = edit_icon(@article, " Edit")
  = delete_icon(@article, " Delete")
  = link_to "Back to All Articles", articles_path

%p= @article.body

%p.tag_list
  %em Tagged: #{@article.tag_list}

%h3
  Comments
  %span.comment_count (#{@article.comments.count})

- @article.comments.each do |comment|
  .comment
    %p
      %em= comment.author_name
      said at #{distance_of_time_in_words(@article.created_at, comment.created_at)} later:
    %p= comment.body

%h4 Add Your Comment
= form_for(@article.comments.new) do |f|
  %p
    = f.label :author_name
    %br
    = f.text_field :author_name
  %p
    = f.label :body
    %br
    = f.text_area :body
  = f.hidden_field :article_id
  = f.submit "Save"